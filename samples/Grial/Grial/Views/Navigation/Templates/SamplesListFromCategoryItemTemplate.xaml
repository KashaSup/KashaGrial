<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="UXDivers.Artina.Grial.SamplesListFromCategoryItemTemplate">
	<StackLayout
		Padding="24,0" 
		HorizontalOptions="FillAndExpand"
		Orientation="Horizontal" >
		
		<Label
			Text="{Binding Icon}"
			Style="{DynamicResource MainMenuIconStyle}" />
		
		<Label 
			Text="{Binding Name}"
			Style="{DynamicResource MainMenu_Label_Style}"/>

		<Label 
			Text="&#xf105;"
			Style="{DynamicResource MainMenu_Right_Chevron_Style}" />

	</StackLayout>
</ContentView>
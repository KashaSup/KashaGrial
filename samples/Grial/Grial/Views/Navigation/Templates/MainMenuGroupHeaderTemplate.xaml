<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="UXDivers.Artina.Grial.MainMenuGroupHeaderTemplate"
	xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
	BackgroundColor="{StaticResource MainMenuBackgroundColor}">

	<StackLayout Padding="24,0,0,0" 
		VerticalOptions="CenterAndExpand"
		HorizontalOptions="StartAndExpand"
		Style="{DynamicResource MainMenuStyle}" 
		Orientation="Horizontal">

		<Label 
			Text="{Binding Name}" 
			Style="{DynamicResource MainMenuHeaderStyle}" />
	</StackLayout>
</ContentView>
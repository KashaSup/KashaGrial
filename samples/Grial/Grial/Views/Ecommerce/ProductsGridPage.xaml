<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="UXDivers.Artina.Grial.ProductsGridPage"
xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
Title="Products Grid" >

	<Grid>
		<StackLayout>

				<StackLayout x:Name="EcommerceProductGridBanner" 
					Style="{StaticResource EcommerceProductGridBannerStyle}" 
					Padding="0,20,0,0"
				>
					<Label
						FontSize="20"
						Text="25% discount" 
						HorizontalTextAlignment="Center" 
						VerticalTextAlignment="Center"
						TextColor="White" 
					/>

					<Label
						FontSize="14"
						Text="Enjoy it now!" 
						TextColor="White" 
						HorizontalTextAlignment="Center" 
						VerticalTextAlignment="Center"
					/>
				</StackLayout>

				<ScrollView>

					<Grid Padding="10" ColumnSpacing="10" >
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<!---Left Column Content -->
						<StackLayout 
							x:Name="LeftColumn"
							Grid.Column="0">
						</StackLayout>

						<!-- Right Column Content-->
						<StackLayout 
							x:Name="RightColumn"
							Grid.Column="1">
						</StackLayout>

					</Grid>
				</ScrollView>
		</StackLayout>

	</Grid>
</ContentPage>